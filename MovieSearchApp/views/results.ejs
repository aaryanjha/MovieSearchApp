<%- include("partials/header") %>
    <nav class="navbar navbar-default" style="background-color: rgb(233, 236, 239);;">
        <div class="navbar-header">
            <h4>Results Page</h4>
        </div>
        <div class="nav navbar-nav navbar-right">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Logout</button>
        </div>
    </nav>
    <div class="container" style="margin-top: 2rem;">
        <div id="movies" class="row text-center" style="display:flex; flex-wrap: wrap;">   
            <% data["results"].forEach(function(movie){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="https://image.tmdb.org/t/p/w200/<%= movie.poster_path %>" alt="">
                        <div class="caption">
                            <h5><%= movie.title %></h5>
                            <h6><%= movie.release_date %></h6>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div> 
    <br>
    <nav class="navbar navbar-default">
        <div class="container">
          <div class="navbar-header" style="margin: 0px auto;">
            <a class="navbar-brand" href="/">Return to Search Page</a>
          </div>
        </div>
      </nav>
      <style>
        body{
            background-image: url(https://images.unsplash.com/photo-1544430792-111894462e8d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=967&q=80);
            background-size: cover;
        }
    </style>
<%- include("partials/footer") %>